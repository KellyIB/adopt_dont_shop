<h1><%= link_to "Shelter Index", "/shelters" %></h1>
<br></br>
<h2><%= link_to "Pets Index", "/pets" %></h2>
<br></br>

<%= form_tag "/pets/#{@pet_id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
<br></br>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
<br></br>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
<br></br>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %>
<br></br>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %>
<br></br>
  <%= label_tag :adoption_status %>
  <%= text_field_tag :adoption_status %>
<br></br>
  <%= submit_tag "Update Pet" %>
<% end %>
